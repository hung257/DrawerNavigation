<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activity.ChiTietSanPhamActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Chi Tiet San Pham"
        android:background="#66E99C"
        app:titleTextColor="#DF701E"
        android:id="@+id/toolbarchitietsp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:layout_margin="2dp"
            android:id="@+id/imageviewchitietsp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ten san pham"
                android:textColor="#304FFE"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/textviewtenchitietsp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="gia san pham"
                android:textColor="#E6609C"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/textviewgiachitietsp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/spinnerchitiet"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dat Mua"
                android:textColor="#A319E7"
                android:id="@+id/buttondatmua"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="#F3F0EB"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mo ta san pham"
                android:background="#E9D19E"
                android:textSize="25sp"
                android:textColor="#7421E7"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewmotachitietsp"
                    android:text="chi tiet san pham"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"/>

            </ScrollView>

    </LinearLayout>
</LinearLayout>